#!/bin/bash
DOMAIN=${1:-test.magento.klickly-dev.com}
VERSION=${2:-2.3.0}
IS_LOCAL=${3:-false}
OS=$(uname -s)

if [[ $OS == 'Linux' ]]; then
  if ! type docker > /dev/null; then
    echo "Docker is not installed. Installing..."
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -
    sudo add-apt-repository "deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable"
    sudo apt-get update
    sudo apt-get install -y docker-ce

    sudo curl -L "https://github.com/docker/compose/releases/download/1.23.2/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
    sudo chmod +x /usr/local/bin/docker-compose

    echo "Creating swap file"
    sudo fallocate --length 2GiB /swapfile
    sudo chmod 600 /swapfile
    sudo mkswap /swapfile
    sudo swapon /swapfile
    echo "/swapfile     swap     swap     defaults     0     0" | sudo tee -a /etc/fstab
    echo "vm.swappiness = 10" | sudo tee -a /etc/sysctl.conf
    echo "vfs_cache_pressure = 50" | sudo tee -a /etc/sysctl.conf

    until sudo docker info; do
      sleep 1
    done;
  fi
   
elif [[ $OS == 'Darwin' ]]; then

  if ! type brew > /dev/null; then
    echo "Homerbrew is not installed. Installing..."
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi

  if ! type git > /dev/null; then
    echo "Git is not installed. Installing..."
    brew install git
  fi

  if ! type docker > /dev/null; then
    echo "Docker is not installed. Installing..."
    brew cask install docker
    open /Applications/Docker.app

    until docker info; do
      sleep 1
    done;
  fi

fi

if [ ! -d "Magento-Shops" ]; then
  mkdir ~/Magento-Shops
fi

cd ~/Magento-Shops

if [ -d "$DOMAIN" ]; then
  echo "Domain already in use, please specify another and try again"
  return 0;
fi

mkdir ~/Magento-Shops/$DOMAIN
cd ~/Magento-Shops/$DOMAIN

curl -s https://raw.githubusercontent.com/klickly/klickly-docker-magento/master/lib/template|bash -s - magento-2
bin/download $VERSION

if [ "$IS_LOCAL" == "true" ]; then
  echo "Your system password has been requested to add an entry to /etc/hosts..."
  echo "127.0.0.1 $DOMAIN" | sudo tee -a /etc/hosts
fi

sudo bin/setup $DOMAIN